package net.believecollective.ag2010.view.navigator {
	import net.believecollective.ag2010.app.ApplicationFacade;	import net.believecollective.ag2010.model.vo.timeline.eras.AGEraVO;	import net.believecollective.ag2010.patterns.proxy.ConfigProxy;	import net.believecollective.ag2010.view.AGBaseView;	import net.believecollective.ag2010.view.navigator.components.NavigatorViewGFX;	/**
	 * @author Dan Mackie (dan@believecollective.net)
	 */
	public class NavigatorView extends AGBaseView {		public static const NAME : String = "NavigatorView";				public function NavigatorView() {			super(NAME);		}				override public function fInit() : void {			mcGFX = fCreateGFX();		}		private function fCreateGFX() : NavigatorViewGFX {			var t_o : NavigatorViewGFX = new NavigatorViewGFX(_oConfig as ConfigProxy, _oTimeline);			addChild(t_o);			return t_o;		}				override public function fUpdate(arg_o : Object = null, arg_sEvent : String = "") : void {			switch(arg_sEvent){				case ApplicationFacade.NOTE_FINISH_LOADING_SEQUENCE: 					(mcGFX as NavigatorViewGFX).fInit(arg_o as AGEraVO);					break;				case ApplicationFacade.NOTE_TIMELINE_MOVE:					(mcGFX as NavigatorViewGFX).fMoveScrollHead(arg_o as AGEraVO);					break;				case ApplicationFacade.NOTE_TIMELINE_EVENT_ACTIVE:					(mcGFX as NavigatorViewGFX).fMoveScrollHead(arg_o as AGEraVO);					break;				case ApplicationFacade.NOTE_ENTERING_NEW_ERA:					(mcGFX as NavigatorViewGFX).fShiftEras(arg_o as AGEraVO);					break;			}		}	}}
	